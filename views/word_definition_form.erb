<h2>Add a definition to  <%= @word.word() %> </h2>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='definition'>Definition</label>
  <textarea id='definition' name='definition' type='text' class="form-control" rows='5'></textarea>

  <button type="submit" class="btn btn-default">Add definition</button>
</form>
